<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

     <class name = "com.ideas2it.employeemanagement.model.WorkPlace" table = "work_place" >

        <id name = "workPlaceId"  column = "id" type = "int">
            <generator class = "increment"/>
        </id>
       
        <property name = "floorNumber" column = "floor_number" type = "int"/>
    </class>
    
</hibernate-mapping>	
